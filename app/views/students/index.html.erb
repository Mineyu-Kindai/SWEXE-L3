<div class=content_box>
<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>

<p class=title_>学生情報一覧</p>
<p><%= link_to '新規追加', '/students/new' %></p>
<% @students.each do |student| %>
  <div class=student_tag>
    <p><div>学籍番号：<%= student.sid %></div></p>
    <p><div>氏名：<%= student.name %></div></p>
    <p><div>メールアドレス：<%= student.email %></div></p>
    <span><%= link_to '削除', "/students/#{student.id}", data: {turbo_method: :delete} %></span>
    <span><%= link_to '編集', "/students/#{student.id}/edit" %></span>
  </div>
<% end %>
</div>